#!/bin/sh

set -e

umask 077

basedir=~/.EiniaOraCoin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/EiniaOraCoin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# EiniaOraCoin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/EiniaOraCoin/EiniaOraCoin-qt "$@"
